    "/auth/login": {
      "post": {
        "tags": ["Autenticación"],
        "summary": "Iniciar sesión de un usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["numero", "contrasena"],
                "properties": {
                  "numero": { "type": "string" },
                  "contrasena": { "type": "string" }
                }
              },
              "example": {
                "numero": "123456789",
                "contrasena": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "usuario": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "numero": { "type": "string" },
                        "nombre": { "type": "string" },
                        "apellido": { "type": "string" }
                      }
                    }
                  }
                },
                "example": {
                  "message": "Inicio de sesión exitoso",
                  "usuario": {
                    "id": 1,
                    "numero": "123456789",
                    "nombre": "Juan",
                    "apellido": "Perez"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Faltan campos requeridos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Número y contraseña son requeridos"
                }
              }
            }
          },
          "401": {
            "description": "Contraseña incorrecta",
