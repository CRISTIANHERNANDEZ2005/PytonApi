    "/auth/register": {
      "post": {
        "tags": ["Autenticación"],
        "summary": "Registrar un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["numero", "nombre", "apellido", "contrasena"],
                "properties": {
                  "numero": { "type": "string" },
                  "nombre": { "type": "string" },
                  "apellido": { "type": "string" },
                  "contrasena": { "type": "string" }
                }
              },
              "example": {
                "numero": "123456789",
                "nombre": "Juan",
                "apellido": "Perez",
                "contrasena": "password123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "usuario": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "numero": { "type": "string" },
                        "nombre": { "type": "string" },
                        "apellido": { "type": "string" }
                      }
                    }
                  }
                },
                "example": {
                  "message": "Usuario registrado exitosamente",
                  "usuario": {
                    "id": 1,
                    "numero": "123456789",
                    "nombre": "Juan",
                    "apellido": "Perez"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Faltan campos requeridos o contraseña inválida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Número, nombre, apellido y contraseña son requeridos"
                }
              }
            }
          },
          "409": {
            "description": "El número ya está registrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "El número ya está registrado"
                }
              }
            }
