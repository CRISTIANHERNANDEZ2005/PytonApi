          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nombre", "precio", "categortia_id"],
                "properties": {
                  "nombre": { "type": "string" },
                  "precio": { "type": "number" },
                  "descripcion": { "type": "string" },
                  "categortia_id": { "type": "integer" }
                }
              },
              "example": {
                "nombre": "Zapatillas",
                "precio": 59.99,
                "descripcion": "Zapatillas deportivas",
                "categortia_id": 2
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "id": { "type": "integer" },
